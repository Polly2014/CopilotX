After=network.target

[Service]
Type=simple
User=azureuser
Group=azureuser
WorkingDirectory=/home/azureuser/GitHub_Workspace/CopilotX
EnvironmentFile=/home/azureuser/.copilotx/.env
ExecStart=/home/azureuser/GitHub_Workspace/CopilotX/.venv/bin/copilotx serve --host 0.0.0.0 --port 24680
Restart=always
RestartSec=5

